# ============================================
# PostgreSQL設定
# ============================================
POSTGRES_DB=aikata
POSTGRES_USER=aikata
POSTGRES_PASSWORD=your_secure_password_here

# ============================================
# AI API設定
# ============================================
AI_API_KEY=your_ai_api_key_here
AI_API_URL=https://your-ai-api-endpoint.com
AI_API_MODEL=gpt-4

# ============================================
# NextAuth認証設定
# ============================================
# 32文字以上のランダム文字列を生成: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://your-domain.com:3000

# ============================================
# Keycloak OIDC設定
# ============================================
KEYCLOAK_ID=aikata-client
KEYCLOAK_SECRET=your_keycloak_secret_here
KEYCLOAK_ISSUER=https://keycloak.your-domain.com/realms/your-realm

# ============================================
# セキュリティ設定
# ============================================
# 64桁の16進数文字列を生成: openssl rand -hex 32
ENCRYPTION_KEY=your_64_hex_chars_encryption_key_here

# ============================================
# オプション設定
# ============================================
# ファイルアップロードサイズ上限 (MB)
# FILE_UPLOAD_MAX_FILE_SIZE_MB=50

# AIタスクキュー設定
# AI_QUEUE_CONCURRENCY=1
# AI_QUEUE_POLLING_INTERVAL_MS=10000

# デバッグログ有効化 (設定すると有効)
# AIKATA_LOG_DEBUG=true

# ============================================
# ポート設定 (docker-compose用)
# ============================================
APP_PORT=3000
DB_PORT=5432
PGADMIN_PORT=8080

# ============================================
# pgAdmin設定
# ============================================
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
